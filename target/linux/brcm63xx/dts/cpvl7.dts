/dts-v1/;

#include "bcm6368.dtsi"

#include <dt-bindings/gpio/gpio.h>
#include <dt-bindings/input/input.h>

/ {
	model = "Telsey CPVL7";
	compatible = "telsey,cpvl7", "brcm,bcm6368";

	chosen {
		bootargs = "rootfstype=squashfs noinitrd console=ttyS0,115200";
		stdout-path = "serial0:115200n8";
	};

	gpio-keys-polled {
		compatible = "gpio-keys-polled";
		#address-cells = <1>;
		#size-cells = <0>;
		poll-interval = <20>;
		debounce-interval = <60>;

		/* neither of these are correct :( */
		reset {
			label = "reset";
			gpios = <&pinctrl 34 1>;
			linux,code = <KEY_RESTART>;
		};

		wps {
			label = "wps";
			gpios = <&pinctrl 35 1>;
			linux,code = <KEY_WPS_BUTTON>;
		};
	};

	gpio-leds {
		compatible = "gpio-leds";

		usb_orange {
			label = "telsey:orange:usb";
			gpios = <&pinctrl 5 GPIO_ACTIVE_LOW>;
		};

		altibox {
			label = "telsey:green:altibox";
			gpios = <&pinctrl 24 GPIO_ACTIVE_LOW>;
		};

		usb_green { /* unused? */
			label = "R1000H:green:usb";
			gpios = <&pinctrl 21 1>;
		};

		power_green { /* unused on my device? */
			label = "R1000H:green:power";
			gpios = <&pinctrl 22 0>;
			default-state = "on";
		};

		wps_green { /* unused? */
			label = "R1000H:green:wps";
			gpios = <&pinctrl 23 1>;
		};

		wps_red { /* unused */
			label = "R1000H:red:wps";
			gpios = <&pinctrl 30 1>;
		};

		inet_red { /* unused */
			label = "R1000H:red:inet";
			gpios = <&pinctrl 31 0>;
		};
	};
};

&pflash {
	status = "ok";

	linux,part-probe = "bcm63xxpart";
};

&uart0 {
	status = "ok";
};

&uart1 {
	status = "ok";
};
